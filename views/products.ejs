<form class="cat-form"  action="/products/search" method="GET">
    <input class="searchbar" type="text" name="q" placeholder="Search by product name">
    <button class="btn btn-primary" type="submit">üîç</button>
</form>
<main>
    <div>
        <div class="header-container">
            <h1>Products</h1>
             <div>
            <% if (reqInfo.roles.includes("Admin")) { %>
                <a class="btn btn-success create-button" href="/products/edit">Add New Product</a>
            <% } %>
            </div>
        </div>
        <div>                    
            <table class="listing-table">
                <thead class="listing-head">
                    <tr>
                        <th>Name</th>
                        <th>Cost</th>
                        <% if (reqInfo.roles.includes("Admin")) { %>
                            <th id="listing-del">Delete</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody class="listing-body">
                    <% products.forEach(product => { %>
                        <% if (product && product.productName && product._id) { %>
                            <tr>
                                <td><a href="/products/<%= product._id %>"><%= product.productName %></a></td>
                                <td>$<%= product.unitCost %></td>
                                <% if (reqInfo.roles.includes("Admin")) { %>
                                    <td>
                                        <a href="/products/<%= product._id %>/delete">
                                            <button id="cliDelBtn" class="btn btn-danger">‚å¶</button>
                                        </a>
                                    </td>
                                <% } %>
                            </tr>
                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</main>


