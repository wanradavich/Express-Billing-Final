<form class="cat-form" id="searchForm" action="/user/search" method="GET">
  <input class="searchbar" type="text" name="q" placeholder="Search by username">
  <button class="btn btn-primary" type="submit">üîç</button>
</form>
<main id="user-page">
  <div>
    <div class="header-container">
      <h1><%= title %></h1>
      <div class="sub-head-box">
        <a class="btn btn-success create-button" href="/user/register">+ New User</a> 
      </div>
    </div>
    <div>
        <table class="listing-table">
          <thead class="listing-head">
            <tr>
              <th>üë§ User</th>
              <% if (reqInfo.roles.includes("Admin")) { %>
                <th id="listing-del">Delete</th>
              <% } %>
              <% if (reqInfo.roles.includes("Manager")) { %>
                <th id="listing-del"></th>
              <% } %>
            </tr>
          </thead>
          <tbody class="listing-body">
            <% users.forEach(user => { %>
              <% if (user && user.id && user.username) { %>
                <tr>
                  <td><a href="/user/<%= user.id %>"><%= user.username %></a></td>
                  <td>
                    <% if (reqInfo.roles.includes("Admin")) { %>
                      <a href="/user/<%= user.id %>/delete">
                        <button id="cliDelBtn" class="btn btn-danger">‚å¶</button>
                      </a>
                    <%}%>
                  </td>
                </tr>
              <% } %>
            <% }) %>
          </tbody>
        </table>
    </div>
  </div>
</main>
