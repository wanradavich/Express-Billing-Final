<main id="myInvoice-page">
    <div class="header-container">
      <h1> <%= title %></h1>
      <p>** Name changes may affect your invoice listings. Please contact Admin Services for more information **</p>
  </div>
  <div id="list-container">
    <ul>
        <% invoices.forEach(invoice => { %>
          <% if (invoice) { %>
                <li class="myInvoices">
                  <a href="/invoices/<%= invoice._id %>"> Invoice #<%= invoice.invoiceNumber %></a>                 
                </li>
            <% } %>
        <% }) %>
    </ul>
  </div>
  </main>